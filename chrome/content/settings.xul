<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://adblockplus/skin/settings.css" type="text/css"?>

<!DOCTYPE window SYSTEM "chrome://adblockplus/locale/settings.dtd">

<window
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  title="&dialog.title;"
  id="adblockPreferencesWindow"
  onload="setTimeout(init, 0)"
  onunload="flasher.stop()"
  width="600px"
  height="450px"
  persist="screenX screenY width height"
  windowtype="adblockplus:settings">

<script type="application/x-javascript" src="settings.js"/>
<script type="application/x-javascript" src="security.js"/>

<keyset id="adblockKeys">
  <key keycode="VK_RETURN" command="ok-command"/>
  <key keycode="VK_ENTER" command="ok-command"/>
  <key keycode="VK_CANCEL" command="cancel-command"/>
  <key keycode="VK_ESCAPE" command="cancel-command"/>
</keyset>

<commandset id="adblockCommands">
  <command id="ok-command" oncommand="addFilter(); saveSettings(); window.close()"/>
  <command id="cancel-command" oncommand="window.close()"/>
</commandset>

<toolbox id="menuToolbox">
  <menubar id="menu">
    <menu id="filters-menu" label="&filters.label;" accesskey="&filters.accesskey;">
      <menupopup id="filters-popup" onpopupshowing="fillFiltersPopup()">
        <menuitem id="import" label="&import.label;..." oncommand="importList()"/>
        <menuitem id="export" label="&export.label;..." oncommand="exportList()"/>
        <menuitem id="clearall" label="&clearall.label;..." oncommand="clearList()"/>
        <menuseparator/>
        <menuitem id="listsort" label="&listsort.label;" type="checkbox" oncommand="togglePref('listsort')"/>
      </menupopup>
    </menu>
    <menu id="options-menu" label="&options.label;" accesskey="&options.accesskey;">
      <menupopup id="options-popup" onpopupshowing="fillOptionsPopup()">
        <menuitem id="enabled" label="&enable.label;" type="checkbox" oncommand="togglePref('enabled')"/>
        <menuseparator/>
        <menuitem id="showinstatusbar" label="&showinstatusbar.label;" type="checkbox" oncommand="togglePref('showinstatusbar')"/>
        <menuitem id="localpages" label="&localpages.label;" type="checkbox" oncommand="togglePref('blocklocalpages')"/>
        <menuitem id="frameobjects" label="&objecttabs.label;" type="checkbox" oncommand="togglePref('frameobjects')"/>
        <menuitem id="slowcollapse" label="&collapse.label;" type="checkbox" oncommand="togglePref('fastcollapse')"/>
        <menuitem id="linkcheck" label="&linkcheck.label;" type="checkbox" oncommand="togglePref('linkcheck')"/>
      </menupopup>
    </menu>
    <menu id="help-menu" label="&help.label;" accesskey="&help.accesskey;">
      <menupopup id="help-popup">
        <menuitem id="faqLink" label="&faq.label;" oncommand="abp.loadInBrowser('&faq.url;');"/>
        <menuitem id="tipsLink" label="&tips.label;" oncommand="abp.loadInBrowser('&tips.url;');"/>
        <menuseparator/>
        <menuitem id="aboutAdblock" label="&about.label;..." oncommand="openAbout()"/>
      </menupopup>
    </menu>
  </menubar>
</toolbox>

<vbox id="entryarea">
  <description>
    &description;
  </description>
  <hbox align="center">
    <label id="newfilterLabel" value="&newfilter.label;:" accesskey="&newfilter.accesskey;" control="newfilter" />
    <menulist id="newfilter" flex="1" editable="true" disableautoselect="true" onkeypress="onFilterKeyPress(event)" onpopupshowing="fixColWidth()">
    <menupopup/>
    </menulist>
    <button id="newbutton" label="&add.label;" accesskey="&add.accesskey;" oncommand="addFilter();"/>
  </hbox>
</vbox>

<vbox id="listarea" flex="1">
  <label id="listLabel" value="&list.label;:" accesskey="&list.accesskey;" control="list" />
  <listbox id="list" flex="1" context="listitem-context" onkeypress="onListKeyPress(event)">
    <listitem id="list-editor"><textbox id="list-editorField"/></listitem>
  </listbox>
  <popup id="listitem-context" onpopupshowing="fillContext()">
    <menuitem id="context-edit" label="&context.edit.label;" oncommand="editor.startEditor(document.popupNode)"/>
    <menuitem id="context-remove" label="&context.remove.label;" oncommand="removeFilter(document.popupNode);"/>
    <menuseparator/>
    <menuitem id="context-import" label="&import.label;..." oncommand="importList()"/>
    <menuitem id="context-export" label="&export.label;..." oncommand="exportList()"/>
    <menuitem id="context-clearall" label="&clearall.label;..." oncommand="clearList()"/>
    <menuseparator/>
    <menuitem id="context-listsort" label="&listsort.label;" type="checkbox" oncommand="togglePref('listsort')"/>
  </popup>
</vbox>

<hbox id="buttons" pack="end">
  <button class="dialog-button" id="ok-button" label="&ok.label;" command="ok-command"/>
  <button class="dialog-button" id="cancel-button" label="&cancel.label;" command="cancel-command"/>
</hbox>

</window>
