<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://adblockplus/skin/about.css" type="text/css"?>

<!DOCTYPE dialog SYSTEM "chrome://adblockplus/locale/about.dtd">

<dialog
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  title="&dialog.title;"
  id="adblockAboutWindow"
  windowtype="abp:about"
  onload="init()"
  buttons="accept">

<script type="application/x-javascript;version=1.7" src="utils.js"/>
<script type="application/x-javascript;version=1.7" src="about.js"/>

<description id="title" value="&caption.title;"/>
<hbox align="baseline">
  <label control="version" value="&version.title;"/>
  <textbox id="version" flex="1" class="plain" readonly="true" tabindex="-1"/>
</hbox>

<groupbox id="mainGroup" flex="1">
  <description id="description">
    &description;
  </description>

  <description id="homepageTitle" value="&homepage.label;"/>
  <description id="homepage" class="text-link" value="&homepage.url;" onclick="Utils.loadInBrowser(this.getAttribute('value'))"/>

  <description id="authorTitle" value="&author.label;"/>
  <description id="author" value="Wladimir Palant"/>

  <description id="contributorsTitle" value="&contributors.label;"/>

  <vbox id="developersBox" align="top">
    <label control="developers" value="&developers.label;"/>
    <description id="developers" flex="1"/>
  </vbox>

  <vbox id="designersBox" align="top">
    <label control="designers" value="&designers.label;"/>
    <description id="designers" flex="1">Claude Lespagnol aka Efdur, Kevin Keller</description>
  </vbox>

  <vbox id="subscriptionAuthorsBox" align="top">
    <label control="subscriptionAuthors" value="&subscriptionAuthors.label;"/>
    <description id="subscriptionAuthors" flex="1"/>
  </vbox>

  <vbox id="translatorsBox">
    <label control="translators" value="&translators.label;"/>
    <description id="translators" flex="1"/>
  </vbox>
</groupbox>

</dialog>
