<?xml version="1.0"?>

<RDF:RDF xmlns:RDF="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:chrome="http://www.mozilla.org/rdf/chrome#">

  <!-- list all the packages being supplied -->
  <RDF:Seq about="urn:mozilla:package:root">
    <RDF:li resource="urn:mozilla:package:adblockplus"/>
  </RDF:Seq>

  <!-- package description -->
  <RDF:Description about="urn:mozilla:package:adblockplus"
    chrome:displayName="Adblock Plus"
    chrome:author="Wladimir Palant"
    chrome:name="adblockplus"
      chrome:authorURL="http://adblockplus.mozdev.org/"
    chrome:extension="true"
    chrome:description="Filters ads from web pages"
    chrome:settingsURL="chrome://adblockplus/content/settings.xul">
  </RDF:Description>

  <!-- overlay parentnodes -->
  <RDF:Seq about="urn:mozilla:overlays">
    <!-- Mozilla -->
    <RDF:li resource="chrome://navigator/content/navigator.xul"/>
    <!-- Phoenix/Firebird/Firefox -->
    <RDF:li resource="chrome://browser/content/browser.xul"/>
  </RDF:Seq>
  
  <!-- overlay children -->
  <RDF:Seq about="chrome://navigator/content/navigator.xul">
    <RDF:li>chrome://adblockplus/content/overlay.xul</RDF:li>
  </RDF:Seq>
  <RDF:Seq about="chrome://browser/content/browser.xul">
    <RDF:li>chrome://adblockplus/content/overlay.xul</RDF:li>
  </RDF:Seq>
</RDF:RDF>
