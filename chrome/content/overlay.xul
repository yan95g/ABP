<?xml-stylesheet href="chrome://adblockplus/skin/overlay.css" type="text/css"?>

<!DOCTYPE overlay [
<!ENTITY % overlayDTD SYSTEM "chrome://adblockplus/locale/overlay.dtd">
%overlayDTD;
<!ENTITY % settingsDTD SYSTEM "chrome://adblockplus/locale/settings.dtd">
%settingsDTD;
]>

<overlay id="adblockplus-overlay" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <script type="application/x-javascript" src="overlay.js"/>  
  <script type="application/x-javascript" src="security.js"/>  
  
  <!-- statusbar -->
  <statusbar id="status-bar">
    <popup id="adblockplus-status-popup" onpopupshowing="return adblockpFillPopup()">
      <menuitem id="adblockplus-settings" label="&settings.label;..." key="key-launch-adblockplus-preferences" oncommand="adblockpSettings()"/>
      <menuitem id="adblockplus-sidebar" label="&sidebar.label;" key="key-view-adblockplus-sidebar" oncommand="toggleSidebar('viewAdblockPlusSidebar', true)"/>
      <menuseparator id="adblockplus-whitelist-sep"/>
      <menuitem id="adblockplus-whitelist-site" labeltempl="&whitelist.site.label;" type="checkbox" oncommand="adblockpTogglePattern(this.pattern, this.hasAttribute('checked'))"/>
      <menuitem id="adblockplus-whitelist-page" label="&whitelist.page.label;" type="checkbox" oncommand="adblockpTogglePattern(this.pattern, this.hasAttribute('checked'))"/>
      <menuseparator/>
      <menu id="adblockplus-options" label="&options.label;">
        <menupopup id="adblockplus-options-popup">
          <menuitem id="adblockplus-showinstatusbar" label="&showinstatusbar.label;" type="checkbox" oncommand="adblockpTogglePref('showinstatusbar')"/>
          <menuitem id="adblockplus-frameobjects" label="&objecttabs.label;" type="checkbox" oncommand="adblockpTogglePref('frameobjects')"/>
          <menuitem id="adblockplus-slowcollapse" label="&collapse.label;" type="checkbox" oncommand="adblockpTogglePref('fastcollapse')"/>
          <menuitem id="adblockplus-linkcheck" label="&linkcheck.label;" type="checkbox" oncommand="adblockpTogglePref('linkcheck')"/> 
        </menupopup>
      </menu>
      <menuitem id="adblockplus-enabled" label="&enable.label;" type="checkbox" oncommand="adblockpTogglePref('enabled')"/>
    </popup>
    <statusbarpanel id="adblockplus-status" disabled="true" label="&notloaded.label;" tooltiptext="&notloaded.tooltip;" context="adblockplus-status-popup" onclick="adblockpClickHandler(event)" ondragover="adblockpDragHandler(event)" ondragdrop="adblockpDragHandler(event)" onmousedown="adblockpMouseHandler(event)"/>
  </statusbar> 

  <!-- firefox toolbar -->
  <toolbarpalette id="BrowserToolbarPalette">
    <toolbarbutton id="adblockplus-toolbarbutton" insertbefore="print-button"
        class="toolbarbutton-1 chromeclass-toolbar-additional" disabled="true" label="&menuitem.label;"
        oncommand="adblockpSettings()" onclick="if (event.button == 1) adblockpTogglePref('enabled')" tooltiptext="&notloaded.tooltip;" context="adblockplus-status-popup"/>
  </toolbarpalette>

  <!-- mozilla keybindings -->
  <keyset id="navKeys">
    <key id="key-launch-adblockplus-preferences" modifiers="accel,shift" key="a" oncommand="adblockpSettings()"/>
  </keyset>
  <!-- firefox keybindings -->
  <keyset id="mainKeyset">
    <key id="key-launch-adblockplus-preferences" modifiers="accel,shift" key="a" oncommand="adblockpSettings()"/>
    <key id="key-view-adblockplus-sidebar" modifiers="accel,shift" key="b" command="viewAdblockPlusSidebar"/> 
  </keyset>

  <!-- firefox broadcasters -->
  <broadcasterset id="mainBroadcasterSet">
    <broadcaster id="viewAdblockPlusSidebar" autoCheck="false" label="&sidebar.title;"
      type="checkbox" group="sidebar" sidebarurl="chrome://adblockplus/content/sidebar.xul"
      sidebartitle="&sidebar.title;"
      oncommand="toggleSidebar('viewAdblockPlusSidebar');"/>
  </broadcasterset>

  <!-- firefox view sidebar menu -->
  <menupopup id="viewSidebarMenu">
    <menuitem key="key-view-adblockplus-sidebar" observes="viewAdblockPlusSidebar"/> 
  </menupopup>

  <!-- mozilla tools menu -->
  <menupopup id="taskPopup">
    <menuitem label="&menuitem.label;..." accesskey="&menuitem.accesskey;" key="key-launch-adblockplus-preferences" insertafter="downloadmgr" oncommand="adblockpSettings()"/>
  </menupopup>
  <!-- firefox tools menu -->
  <menupopup id="menu_ToolsPopup">
    <menuitem label="&menuitem.label;..." accesskey="&menuitem.accesskey;" key="key-launch-adblockplus-preferences" insertbefore="devToolsSeparator" oncommand="adblockpSettings()"/>
  </menupopup> 

  <!-- common context-menu -->
  <popup id="contentAreaContextMenu">
    <menuitem id="adblockplus-image-menuitem" label="&context.image.label;..." oncommand="adblockpNode()"/>
    <menuitem id="adblockplus-object-menuitem" label="&context.object.label;..." oncommand="adblockpNode()"/>
    <menuitem id="adblockplus-frame-menuitem" label="&context.frame.label;..." oncommand="adblockpFrame()"/>
  </popup> 
</overlay>
